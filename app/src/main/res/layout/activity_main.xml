<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:id="@+id/layoutSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:weightSum="3"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"

            android:layout_marginTop="0dp"
            android:layout_marginStart="0dp">


        <EditText
                android:id="@+id/NickSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"

                android:layout_marginTop="24dp"


                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"

                android:hint="@string/nickHint"

        />

        <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/BtnSearch"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"

                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"

                android:layout_marginTop="24dp"


        />
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_below="@id/layoutSearch"

            android:layout_marginTop="@dimen/separationLayout"

            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/marginMain"
            android:layout_marginEnd="@dimen/marginMain"
    >

        <android.support.v7.widget.RecyclerView
                android:layout_width="153dp"
                android:layout_height="159dp">

            <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="@dimen/marginMain"

                    android:layout_centerHorizontal="true"


                    android:text="@string/default_title"/>

            <TextView
                    android:id="@+id/value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_below="@id/title"

                    android:layout_marginTop="@dimen/marginMain"

                    android:layout_centerHorizontal="true"

                    android:text="@string/default_value"/>

            <TextView
                    android:id="@+id/rank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_below="@id/value"

                    android:layout_marginTop="20dp"

                    android:layout_centerHorizontal="true"


                    android:text="@string/default_rank"/>

        </android.support.v7.widget.RecyclerView>
    </android.support.constraint.ConstraintLayout>

    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/marginMain"

            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/marginMain"
    />

</RelativeLayout>